        }
    }

    private async Task AppendTable()
    {
        try
        {
            _status = "Working...";
            StateHasChanged();

            _lastOutputPath = await excelMerge.AppendTableFromCsvAsync(
                templateAssetFileName: "Template.xlsx",
                csvAssetFileName: "Data.csv",
                outputFileName: "Output_Table.xlsx",
